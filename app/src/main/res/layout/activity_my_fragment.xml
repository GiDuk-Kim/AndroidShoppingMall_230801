<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyFragment">


    <TextView
        android:id="@+id/logoutTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="24dp"
        android:text="@string/logout"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/withdrawalTv"
        app:layout_constraintTop_toBottomOf="@+id/hpTv" />

    <TextView
        android:id="@+id/infoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/mypage_info"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/useridTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:text="@string/id"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTv" />

    <EditText
        android:id="@+id/idEt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:enabled="false"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTv" />

    <TextView
        android:id="@+id/pwTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:text="@string/pw"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useridTv" />

    <EditText
        android:id="@+id/pwEt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:inputType="textWebPassword"
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEt" />

    <TextView
        android:id="@+id/pwChkTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:text="@string/pw_chk"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwTv" />

    <EditText
        android:id="@+id/pwChkEt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone"
        android:inputType="textWebPassword"
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwEt" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="@string/name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwChkTv" />

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwChkEt" />

    <TextView
        android:id="@+id/emailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:text="@string/email"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTv" />

    <EditText
        android:id="@+id/email1Et"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone|flagForceAscii"
        android:inputType="text"
        android:text=""
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/emailAnotaion"
        app:layout_constraintTop_toBottomOf="@+id/nameEt" />

    <EditText
        android:id="@+id/emailAnotaion"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_edittxt"
        android:ems="0"
        android:enabled="false"
        android:padding="5dp"
        android:text="@"
        android:textColor="@color/colorRed"
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/email2Et"
        app:layout_constraintTop_toBottomOf="@+id/nameEt" />

    <EditText
        android:id="@+id/email2Et"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone|flagForceAscii"
        android:inputType="text"
        android:text=""
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEt" />

    <TextView
        android:id="@+id/genderTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/gender"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTv" />

    <RadioGroup
        android:id="@+id/genderRg"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email1Et">

        <RadioButton
            android:id="@+id/maleRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gender_male"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/femaleRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/gender_female"
            android:textSize="16sp" />
    </RadioGroup>
    <!--
    <TextView
        android:id="@+id/yearsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="@string/years"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderTv" />

    <Spinner
        android:id="@+id/yearsSppiner"
        android:dropDownWidth="280dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderRg" />
        // -->

    <TextView
        android:id="@+id/hpTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="휴대폰"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderTv" />

    <EditText
        android:id="@+id/hp1Et"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:text=""
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/hp2Et"
        app:layout_constraintTop_toBottomOf="@+id/genderRg" />

    <EditText
        android:id="@+id/hp2Et"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:text=""
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/hp3Et"
        app:layout_constraintTop_toBottomOf="@+id/genderRg" />

    <EditText
        android:id="@+id/hp3Et"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_edittxt"
        android:ems="5"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:text=""
        android:textCursorDrawable="@drawable/edittxt_cursor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderRg" />

    <TextView
        android:id="@+id/modifyOkTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:onClick="onOkBtnClick"
        android:text="@string/modifyok"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hp3Et" />

    <TextView
        android:id="@+id/withdrawalTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/withdrawal"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/logoutTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hpTv" />

    <TextView
        android:id="@+id/tvBlank"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/withdrawalTv" />


</androidx.constraintlayout.widget.ConstraintLayout>